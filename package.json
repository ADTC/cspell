{
  "name": "cspell-monorepo",
  "version": "1.0.0",
  "description": "cspell monorepo.",
  "main": "bin.js",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "check-spelling": "cspell **/{*.ts,*.md}",
    "clean-build": "lerna run clean-build",
    "clean": "lerna run clean",
    "coverage": "npm run gen-coverage && nyc report --reporter=lcov --reporter=html",
    "gen-coverage": "rimraf .nyc_output && lerna run coverage",
    "install": "lerna bootstrap",
    "lint-travis": "lerna run lint-travis",
    "prepare": "npm run clean-build",
    "test-spec": "lerna run test-spec",
    "test-ts": "lerna run test-ts",
    "test-watch": "lerna run --parallel test-watch",
    "travis-coverage": "npm run gen-coverage && nyc report --reporter=text-lcov | coveralls",
    "test": "lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streetsidesoftware/cspell.git"
  },
  "keywords": [
    "spelling",
    "code",
    "CI/CD"
  ],
  "author": "Jason Dent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streetsidesoftware/cspell/issues"
  },
  "homepage": "https://github.com/streetsidesoftware/cspell#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/comment-json": "^1.1.1",
    "@types/configstore": "^4.0.0",
    "@types/fs-extra": "^5.1.0",
    "@types/glob": "^7.1.1",
    "@types/lorem-ipsum": "^1.0.2",
    "@types/micromatch": "^3.1.0",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.6",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^10.14.6",
    "@types/xregexp": "^3.0.29",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "cspell": "^3.2.15",
    "cspell-dict-en_us": "^1.2.12",
    "cspell-dict-es-es": "^1.0.11",
    "cspell-dict-nl-nl": "^1.0.16",
    "fs-extra": "^7.0.1",
    "lerna": "^3.13.4",
    "lorem-ipsum": "^1.0.6",
    "mocha": "^6.1.4",
    "mock-require": "^3.0.3",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "nyc": {
    "include": [
      "**/src/**/*.ts"
    ],
    "exclude": [
      "**/src/**/*.test.ts",
      "**/src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ]
  }
}
